<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="game.LandingController" alignment="CENTER">
	<children>
		<HBox>
			<VBox prefWidth="300">
				<HBox>
					<Label fx:id="playerOneLabel" />
					<Label fx:id="playerOneValue" />
				</HBox>
				<HBox>
					<Label fx:id="playerTwoLabel" />
					<Label fx:id="playerTwoValue" />
				</HBox>
			</VBox>
			<VBox prefWidth="300">
				<HBox>
					<TextArea fx:id="showGamesTextField" editable="false" />
				</HBox>
			</VBox>
		</HBox>
		<Button fx:id="playAgainButton" text="Play Again"
			onAction="#playAgain" />
		<Button fx:id="showGamesButton" text="Show games"
			onAction="#showGames" />
	</children>
</VBox>