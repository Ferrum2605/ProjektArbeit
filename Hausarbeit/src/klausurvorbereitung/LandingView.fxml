<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="klausurvorbereitung.LandingController" alignment="CENTER">
    <children>
        <Label fx:id="greetingLabel" />
        <TextField fx:id="userInputTextField" />
        <PasswordField fx:id="passwordInputTextField" />
        <HBox alignment="CENTER">
            <Button fx:id="createUser" text="Create User" onAction="#createUser" />
            <Button fx:id="deleteUser" text="Delete User" onAction="#deleteUser" />
        </HBox>
        <Button fx:id="logoutButton" text="Logout" onAction="#logout" />
    </children>
</VBox>

